<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head', { title: err.message }); %>
</head>
<body>
    <header>
        <%- include('./partials/navbar'); %>
    </header>
    
    <main>
        <div class="container">
            <div class="alert alert-danger" role="alert">
                <h4 class="alert-heading"><%= err.message %></h4>

                <% if (process.env.NODE_ENV !== 'production') { %>
                <p><%= err.stack %></p>
                <% } %>
            </div>
        </div> 
    </main>

    <footer>
        <%- include('./partials/footer'); %>
    </footer>    
</body>
</html>