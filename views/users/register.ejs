<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head', { title: 'Register' }); %>
</head>
<body>
    <header>
        <%- include('../partials/navbar'); %>
    </header>

    <main>
        <div class="container d-flex justify-content-center align-items-center my-3">
            <div class="row">
                <%- include('../partials/alert') %>
                <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
                    <div class="card shadow">
                        <img src="https://images.unsplash.com/photo-1571863533956-01c88e79957e?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1267&q=80"
                            alt="" class="card-img-top" />
                        <div class="card-body">
                            <h5 class="card-title">Register</h5>
                            <form action="/register" method="POST" class="validated-form" novalidate>
                                <div class="mt-3">
                                    <label class="form-label" for="username">Username</label>
                                    <input class="form-control" type="text" id="username" name="username" required>
                                    <div class="valid-feedback">
                                        Looks Good!
                                    </div>
                                </div>
                
                                <div class="mt-3">
                                    <label class="form-label" for="email">Email</label>
                                    <input class="form-control" type="email" id="email" name="email" required>
                                    <div class="valid-feedback">
                                        Looks Good!
                                    </div>
                                </div>
                
                                <div class="mt-3">
                                    <label class="form-label" for="password">Password</label>
                                    <input class="form-control" type="password" id="password" name="password" required>
                                    <div class="valid-feedback">
                                        Looks Good!
                                    </div>
                                </div>
                                <button class="mt-3 btn btn-success col-12">Register</button>
                            </form>
        
                        </div>
                    </div>
                </div>
            </div>            
        </div>
    </main>
    
    <footer>
        <%- include('../partials/footer'); %>
    </footer>
</body>
</html>
    