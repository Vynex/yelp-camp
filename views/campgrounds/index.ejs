<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head', {title: 'Index Page for YelpCamp'}); %>
</head>
<body>
    <header>
        <%- include('../partials/navbar'); %>
    </header>
    
    <main>
        <div class="container">
            <%- include('../partials/alert') %>
            <h2>All Campgrounds</h2>
                <%  for (camp of camps) { %>
                    <div class="card" mb-3>
                        <div class="row">
                            <div class="col-md-4">
                                <img class="img-fluid" alt="camp image" src="<%= camp.image %>">
                            </div>

                            <div class="col-md-8">
                                <div class="card-body">
                                    <h5 class="card-title"><%= camp.title %> </h5>
                                    <p class="card-text"><%= camp.description %></p>
                                    <p class="card-text">
                                        <small class="text-muted"><%= camp.location%></small>
                                    </p>
                                    <a class="btn btn-info" href="/campgrounds/<%=camp._id%>">View <%=camp.title%></a>
                                </div>
                            </div>
                        </div>
                    </div>
                <% } %> 
        </div>
    </main>

    <footer>
        <%- include('../partials/footer'); %>
    </footer>    
</body>
</html>